<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="24dp">

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="55dp"
            android:src="@drawable/back" />
        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/bacham" />




    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/some_id"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="220dp"
                android:src="@tools:sample/avatars" />

            <TextView
                android:id="@+id/textView2"
                app:layout_constraintBottom_toTopOf="@+id/button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.099"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:layout_constraintVertical_bias="0.292"
                android:layout_width="248dp"
                android:layout_height="22dp"
                android:text="TextView"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="105dp" />

            <TextView
                android:id="@+id/textView3"
                app:layout_constraintBottom_toTopOf="@+id/button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.099"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
                app:layout_constraintVertical_bias="0.45"
                android:layout_width="369dp"
                android:layout_height="34dp"
                android:text="TextView"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="133dp" />

            <TextView
                android:id="@+id/some_id"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                android:layout_width="36dp"
                android:layout_height="24dp"
                android:gravity="top"
                android:lineSpacingExtra="0sp"
                android:text="some_id"
                tools:layout_editor_absoluteX="145dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/followers"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.431"
                app:layout_constraintStart_toStartOf="@+id/imageView"
                app:layout_constraintTop_toBottomOf="@+id/some_id"
                android:layout_width="75dp"
                android:layout_height="24dp"
                android:gravity="top"
                android:lineSpacingExtra="0sp"
                android:text="followers"
                tools:layout_editor_absoluteX="145dp"
                tools:layout_editor_absoluteY="46dp" />

            <TextView
                android:id="@+id/some_idnew"
                app:layout_constraintBottom_toTopOf="@+id/news"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.604"
                app:layout_constraintStart_toEndOf="@+id/some_id"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:gravity="top"
                android:lineSpacingExtra="0sp"
                android:text="some_id"
                tools:layout_editor_absoluteX="282dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/news"
                app:layout_constraintBottom_toTopOf="@+id/button2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.524"
                app:layout_constraintStart_toEndOf="@+id/followers"
                app:layout_constraintTop_toBottomOf="@+id/some_idnew"
                android:layout_width="67dp"
                android:layout_height="24dp"
                android:gravity="top"
                android:lineSpacingExtra="0sp"
                android:text="news"
                tools:layout_editor_absoluteX="282dp"
                tools:layout_editor_absoluteY="46dp" />

            <Button
                android:id="@+id/button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/button2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:layout_constraintVertical_bias="0.686"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create News"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="194dp" />

            <TextView
                android:id="@+id/textfollowing"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.554"
                app:layout_constraintStart_toEndOf="@+id/button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.795"
                android:layout_width="128dp"
                android:layout_height="51dp"
                android:text="numberfollowing"
                tools:layout_editor_absoluteX="248dp"
                tools:layout_editor_absoluteY="194dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="36dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/newstext"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/recent"
                app:layout_constraintHorizontal_bias="0.56"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="44dp"
                android:layout_height="24dp"
                android:gravity="top"
                android:lineSpacingExtra="0sp"
                android:text="news"
                tools:layout_editor_absoluteX="134dp"
                tools:layout_editor_absoluteY="6dp" />

            <TextView
                android:id="@+id/recent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.66"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="56dp"
                android:layout_height="24dp"
                android:gravity="top"
                android:lineSpacingExtra="0sp"
                android:text="recent"
                tools:layout_editor_absoluteX="178dp"
                tools:layout_editor_absoluteY="6dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerprofile"
        android:layout_width="410dp"
        android:layout_height="110dp"
        android:orientation="vertical">
    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>