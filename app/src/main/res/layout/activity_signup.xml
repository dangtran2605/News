<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".SignupActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="167dp"
                android:layout_height="wrap_content"
                android:text="Hello!"
                android:textAppearance="@style/hello_again" />

            <TextView
                android:id="@+id/welcome_bac"
                android:layout_width="222dp"
                android:layout_height="60dp"
                android:gravity="top"
                android:lineSpacingExtra="0sp"
                android:text="Signup to get Started"
                android:textAppearance="@style/welcome_bac" />

            <EditText
                android:layout_marginTop="30dp"
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/text_input"
                android:hint=" Username" />

            <EditText
                android:id="@+id/passWord"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/text_input"
                android:hint=" Password" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <TextView
                android:id="@+id/signup_button"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:clipToOutline="true"
                android:gravity="center"
                android:text="Sign Up"
                android:textAppearance="@style/login" />

            <TextView
                android:id="@+id/or_continue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:lineSpacingExtra="0sp"
                android:text="or continue with"
                android:textAppearance="@style/or_continue" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/fb"/>
                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <ImageView
                    android:layout_width="170dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/gg"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/poppins"
                    android:lineSpacingExtra="0sp"
                    android:text="Already have a account?"
                    android:textAppearance="@style/or_continue" />

                <TextView
                    android:id="@+id/login_again"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:lineSpacingExtra="0sp"
                    android:text=" Log in"
                    android:textAppearance="@style/sign_text" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>